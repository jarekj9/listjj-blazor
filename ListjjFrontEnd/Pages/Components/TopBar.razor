@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        <span class="nav-item">
            <a class="nav-link p-2" href="/list">Items </a>
        </span>
        <span class="nav-item">
            <a class="nav-link p-2" href="/categories">Categories </a>
        </span>
        <span class="nav-item">
            <a class="nav-link p-2" href="/settings">Settings </a>
        </span>
        <span class="nav-item">
            <a class="nav-link p-2" href="logout" title="Logged in as @context.User.Identity.Name">Log out</a>
        </span>
        <span class="nav-item">
            <a class="nav-link p-2" href="#" @onclick="ScrollTopButtonClick" @onclick:preventDefault>Scroll Top</a>
        </span>
    </Authorized>
    <NotAuthorized>
        <span class="nav-item">
            <a class="nav-link" href="login">Login</a>
        </span>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Inject] private IJSRuntime JSRuntime { get; set; }

    private async void ScrollTopButtonClick()
    {
        await JSRuntime.InvokeVoidAsync("ScrollTop");
    }
}